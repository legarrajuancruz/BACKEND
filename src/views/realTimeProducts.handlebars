<div class="container">
  <div class="productos">

    <h2>TODOS LOS PRODUCTOS</h2>
    <div class="row">
      {{#each allProducts.payload}}
        <div style="margin-rigth:15px" id="listadoProductos">
          <div>
            <img src={{this.img}} style="width:150px; heigth:auto" alt="" />
          </div>
          <h3>{{this.title}} </h3>
          <h4>{{this.description}} </h4>
          <hr />
          <p>Precio: {{this.price}}</p>
          <p id="ID">{{this._id}}</p>

          <button
            onclick="deleteProductButton(`{{this._id}}`)"
          >Eliminar</button>
        </div>
      {{/each}}
    </div>

    <div id="acciones">
      <div id="nuevo">
        <h3>NUEVO PRODUCTO</h3>
        <form id="miFormulario" onsubmit>
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" required />
          <br />
          <label for="Description">Description:</label>
          <input type="text" id="description" name="description" required />
          <br />
          <label for="price">price:</label>
          <input type="text" id="price" name="price" required />
          <br />
          <label for="price">Stock:</label>
          <input type="text" id="stock" name="stock" required />
          <br />
          <label for="price">Category:</label>
          <input type="text" id="category" name="category" required />
          <br />
          <label for="price">Imagen:</label>
          <input type="img" id="img" name="img" required />
          <br />
          <p style="visibility: hidden;" id="owner">{{user._id}}</p>

          <button id="btnCreate" type="submit">Enviar</button>
        </form>
      </div>

      <div id="nuevo">
        <h3>ELIMINAR PRODUCTO POR ID</h3>
        <form id="miFormularioDos" onsubmit>
          <label for="id">id:</label>
          <input type="text" id="id" name="id" required />
          <br />

          <button type="submit">Enviar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/realTimeProducts.js"></script>