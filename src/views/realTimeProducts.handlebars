<div class="container">
  <div class="row">

    <h2>TODOS LOS PRODUCTOS</h2>
    <div>
      {{#each allProducts}}
        <div id="listadoProductos">
          <h3>{{this.title}}
            {{this.description}}</h3>
          <p>Precio: {{this.price}}</p>
          <p>ID: {{this._id}}</p>
          <button onclick="enviarId({{this._id}})">Eliminar</button>
        </div>
      {{/each}}
      <br />
    </div>
  </div>

  <div id="acciones">
    <div id="nuevo">
      <h3>NUEVO PRODUCTO</h3>
      <form id="miFormulario" onsubmit>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required />
        <br />
        <label for="Description">Description:</label>
        <input type="text" id="description" name="description" required />
        <br />
        <label for="price">price:</label>
        <input type="text" id="price" name="price" required />
        <br />

        <button type="submit">Enviar</button>
      </form>
    </div>

    <div id="nuevo">
      <h3>ELIMINAR PRODUCTO POR ID</h3>
      <form id="miFormularioDos" onsubmit>
        <label for="id">id:</label>
        <input type="text" _id="id" name="id" required />
        <br />

        <button type="submit">Enviar</button>
      </form>
    </div>
  </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>