<style>
  .table td { padding: 5 10 0 10; }
</style>

<div class="container mt-5">
  <h2>Administrador de usuarios</h2>
  <h4>{{user.first_name}}</h4>
  <h5>{{user.role}}</h5>
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">New Role</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each allUsers}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.first_name}}</td>
          <td>{{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.role}}</td>
          <td>
            <form
              id="form_{{this._id}}"
              onsubmit="guardarNuevoRol('{{this._id}}'); return false;"
            >
              <select
                class="form-select"
                id="roleSelect_{{this._id}}"
                style="width: 100%; height: 30px; font-size: 12px;"
              >
                <option value="user">User</option>
                <option value="premium">Premium</option>
              </select>
            </form>
          </td>
          <td>
            <a
              href="#"
              class="btn btn-warning btn-sm"
              onclick="guardarNuevoRol('{{this._id}}')"
            >Save Role</a>
            <a href="#" class="btn btn-primary btn-sm">View</a>
            <a
              href="#"
              class="btn btn-danger btn-sm"
              onclick="eliminarUsuario('{{this._id}}')"
            >Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script src="/js/adminUserControl.js"></script>