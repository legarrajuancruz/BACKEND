<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="mb-4">PREMIUM</h1>
      <div>
        <p>USER ID{{user.first_name}}</p>
        <form
          action="/api/users/premium/{{userId}}"
          method="post"
          enctype="multipart/form-data"
        >
          <h4>Subir archivos</h4>
          <div class="mb-3">
            <label for="profileImage">Imagen de perfil:</label>
            <input
              type="file"
              name="profiles"
              id="profileImage"
              accept="image/*"
            />
          </div>
          <div class="mb-3">
            <label for="productImage">Imagen de producto:</label>
            <input
              type="file"
              name="products"
              id="productImage"
              accept="image/*"
            />
          </div>
          <div class="mb-3">
            <label for="document">Documento:</label>
            <input
              type="file"
              name="document"
              id="document"
              accept=".pdf, .doc, .docx"
            />
          </div>
          <button type="submit" class="btn btn-primary m-4">Hazte Premium</button>
        </form>
      </div>
    </div>
  </div>
</div>