<div>
  {{#each Products.payload}}
    <div id="listadoProductos">
      <h3>{{this.title}} {{this.description}}</h3>
      <p>Precio: {{this.price}}</p>
      <p>ID: {{this.id}}</p>

    </div>
  {{/each}}
</div>
<br />
<div class="row my-5">
  <div class="col">
    <nav>
      <ul class="pagination justify-content-center">
        {{#if Products.hasPrevPage}}
          <li class="page-item">
            <a class="page-link" href="{{Products.prevLink}}">
              Anterior
            </a>
          </li>
        {{/if}}

        {{#if Products.hasPrevPage}}
          <li class="page-item">
            <a
              class="page-link"
              href="{{Products.prevLink}}"
            >{{Products.prevPage}}</a>
          </li>
        {{/if}}

        <li class="page-item">
          <a class="page-link">{{Products.page}}</a>
        </li>

        {{#if Products.hasNextPage}}
          <li class="page-item">
            <a
              class="page-link"
              href="{{Products.nextLink}}"
            >{{Products.nextPage}}</a>
          </li>
        {{/if}}

        {{#if Products.hasNextPage}}
          <li class="page-item">
            <a class="page-link" href="{{Products.nextLink}}">Siguiente</a>
          </li>
        {{/if}}

      </ul>
    </nav>
  </div>
</div>

<script src="js/products.js"></script>