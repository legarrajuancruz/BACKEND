<div class="container">
  <div class="productos">
    <div>
      <h3> {{user.first_name}} {{user.last_name}} </h3>
      <h5 id="userID">{{user._id}}</h5>

    </div>
    <div>
      <h2>TODOS LOS PRODUCTOS</h2>
      <div class="row">
        {{#each Products.payload}}
          <div id="listadoProductos">
            <div>
              <img src="{{this.img}}" alt="" style="width:150px; heigth:auto" />
            </div>
            <div>
              <h3>{{this.title}} </h3>
              <h4> {{this.description}} </h4>
              <hr />
              <p><span> Precio: {{this.price}} </span></p>
              <p>ID: {{this.id}}</p>
              <p>stock {{this.stock}}</p>
            </div>
            <button onclick="agregar(this)" data-id="{{this.id}}">Agregar al
              carrito</button>
          </div>

        {{/each}}

      </div>

    </div>
  </div>
</div>
<div class="row my-5">
  <div class="col">
    <nav>
      <ul class="pagination justify-content-center">
        {{#if Products.hasPrevPage}}
          <li class="page-item">
            <a class="page-link" href="{{Products.prevLink}}">
              Anterior
            </a>
          </li>
        {{/if}}

        {{#if Products.hasPrevPage}}
          <li class="page-item">
            <a
              class="page-link"
              href="{{Products.prevLink}}"
            >{{Products.prevPage}}</a>
          </li>
        {{/if}}

        <li class="page-item">
          <a class="page-link">{{Products.page}}</a>
        </li>

        {{#if Products.hasNextPage}}
          <li class="page-item">
            <a
              class="page-link"
              href="{{Products.nextLink}}"
            >{{Products.nextPage}}</a>
          </li>
        {{/if}}

        {{#if Products.hasNextPage}}
          <li class="page-item">
            <a class="page-link" href="{{Products.nextLink}}">Siguiente</a>
          </li>
        {{/if}}

      </ul>
    </nav>
  </div>
</div>
<script src="/js/products.js"></script>